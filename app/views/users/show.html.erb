<div class='container'>
  <div>
    <% if @user.image? %>
      <%= image_tag @user.image.user_thumb.url, class: 'rounded-circle' %>
    <% else %>
      <%= image_tag 'default.jpg', class: 'rounded-circle' %>
    <% end %>
    <h3><%= @user.name %>さんのマイページ</h3>
    <% if correct_user? %>
      <%= link_to 'ユーザー情報を編集する', edit_user_path(@user), class: 'btn btn-dark m-3' %>
    <% end %>
  </div>
  
  <ul class='nav nav-tabs nav-justified mb-3'>
    <li class='nav-item nav-link active'>
      気になるリスト
    </li>
    <li class='nav-item nav-link'>
      <%= link_to "#{@user.name}さんの投稿", review_user_path(@user) %>
    </li>
  </ul>
  
  <%= render 'shared/item_index', items: @items %>
</div>