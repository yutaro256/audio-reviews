<div class='text-center m-4' >
  <h1>商品の編集</h1>
</div>

<div class='row justify-content-center'>
  <div class='col-sm-4 card p-4'>

    <%= form_with(model: @item, local: true) do |f| %>
    
      <%= render 'shared/error-messages', model: f.object %>
    
      <div class='form-group'>
        <%= f.label :name_item, '商品名（必須）' %>
        <%= f.text_field :name_item, class: 'form-control' %>
      </div>
      
      <div class='form-group'>
        <%= f.label :maker, 'メーカー名（必須）' %>
        <%= f.text_field :maker, class: 'form-control' %>
      </div>
      
      <div class='form-group'>
        <%= f.label :price, '価格' %>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
      
      <div class='form-group'>
        <%= f.label :outline, '概要' %>
        <%= f.text_area :outline, class: 'form-control' %>
      </div>
      
      <div class='form-group'>
        <%= f.label :image, '商品画像' %>
        <%= f.file_field :image %>
      </div>
      
      <%= f.submit '編集', class: 'btn btn-primary btn-block' %>
      
    <% end %>
    
  </div>
</div>